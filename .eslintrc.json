{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "jest/globals": true,
        "jasmine": true
    },
    "parser": "babel-eslint",
    "extends": [
      "standard",
      "plugin:jest/recommended",
      "eslint:recommended"
    ],
    "plugins": [
      "import",
      "jest"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-console":0,
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}
